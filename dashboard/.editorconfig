# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# http://editorconfig.org

root = true

[*]
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.js]

indent_style = space
indent_size = 2
charset = utf-8

[*.twig]

indent_style = space
indent_size = 4

[*.php]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 2
